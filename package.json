{
  "name": "project-jarvis-backend",
  "version": "1.0.0",
  "description": "TypeScript backend for Project Jarvis with TSOA, MongoDB, and Swagger support",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "build:swagger": "tsoa spec-and-routes",
    "build:all": "npm run build:swagger && npm run build",
    "start": "node dist/app.js",
    "dev": "concurrently \"npm run build:swagger -- --watch\" \"nodemon src/app.ts\"",
    "dev:setup": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:teardown": "docker-compose -f docker-compose.dev.yml down",
    "dev:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f mongodb",
    "predev": "npm run dev:setup && sleep 5",
    "test": "mocha --require ts-node/register tests/**/*.test.ts",
    "test:watch": "npm run test -- --watch",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern 'src/routes/**'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern 'src/routes/**' --fix",
    "prettier": "prettier --check src/**/*.ts tests/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts tests/**/*.ts",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prebuild": "mkdir -p dist && npm run build:swagger && npm run lint",
    "prestart": "npm run build:all"
  },
  "keywords": [
    "typescript",
    "express",
    "tsoa",
    "mongodb",
    "swagger",
    "nodejs",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/chai": "^4.3.20",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/helmet": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.17.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "chai": "^5.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsoa": "^6.6.0",
    "typescript": "^5.9.2"
  }
}
